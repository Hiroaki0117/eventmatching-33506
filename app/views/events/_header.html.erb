<header class="header">
      <div class="inner">
        <div class="nav">
          <div class="nav__left">
            <%= link_to image_tag("logo.png", class: :logo), root_path %>
          </div>
          <% if user_signed_in? %>
            
            <div class="nav__right">
              <%= link_to current_user.nickname, user_path(current_user.id), class: :login_user_name %>
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
              <%= link_to "イベント投稿", new_event_path, class: :nav__btn %>
            </div>
            
          <% else %>
            <div class="nav__right">
              <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
              <%= link_to "新規登録", new_user_path, class: :nav__btn %>
            </div>
          <% end %>
        </div>
      </div>
    </header>