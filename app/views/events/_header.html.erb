<header class="header">
  <div class="inner">
    <div class="nav">
      <div class="nav__left">
        <%= link_to image_tag("header-logo.png", class: :logo), root_path %>
      </div>
      <% if user_signed_in? %>
        
        <div class="nav__right">
          <span><%= link_to current_user.nickname, user_path(current_user.id), class: :login_user_name %>
            <ul class = "user_select">
              <li>
                <%= link_to "会員登録内容", mypage_user_path(current_user.id) %>
                <%= link_to "申し込み内容", user_path(current_user.id) %>
                <%= link_to "投稿内容", user_path(current_user.id) %>
              </li>
            </ul>
          </span>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: :nav__logout %>
          <%= link_to "イベント投稿", new_event_path, class: :nav__btn %>
        </div>
        
      <% else %>
        <div class="nav__right">
          <%= link_to "ログイン", new_user_session_path, class: :nav__btn %>
          <%= link_to "新規登録", new_user_path, class: :nav__btn %>
        </div>
      <% end %>
    </div>
  </div>
</header>