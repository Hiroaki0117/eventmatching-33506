<%= render "header" %>
<div class="main-index">
  <%= form_with(url: search_events_path, local: true, method: :get, class: "search-form") do |form| %>
    <%= form.text_field :keyword, placeholder: "イベントを検索する", class: "search-input" %>
    <%= form.submit "検索", class: "search-btn" %>
  <% end %>

  <div class="main-content">
    <div class="main-super">
    <%= image_tag "index-logo", class:"top-image" %>
    </div>
    <div class="top-message">
    <h1>＜新しいイベント情報＞</h1>
    </div>
    <div class="event-count">
    <h2>現在のイベント募集数：<strong><%= @events.count %></strong>件<h2>
    </div>
    <ul class="main-list">
      <% @events.each do |event|%>
        <li class="event-info">
          <div class="sports-genre">      
            <%= event.genre.name %>
          </div>
          <div class="sports-area">
            <%= event.area.name %>
          </div>
          <%= link_to event_path(event.id), class:"img-link" do %>
            <%= image_tag event.image.variant(resize: '500x400') %>
          <% end %>
          <h2 class="event-name"><%= link_to event.name, event_path(event.id), class:"event-name-font" %></h2>
          <dl class="event-exp">
            <dt>
              <img src="https://images.e-venz.com/frontend/image/location.svg" class="Location lazy" alt="Location">
            </dt>
            <dd><%= event.place %></dd>
            <dt>
              <img src="https://images.e-venz.com/frontend/image/women.svg" alt="Women" class="lazy">
            </dt>
            <dd><%= event.capacity %>人</dd>
            <dt>
              <img src="https://images.e-venz.com/frontend/image/calendar.svg" alt="Calendar" class="lazy">
            </dt>
            <dd><%= event.day.year %>年<%= event.day.month %>月<%= event.day.day %>日<%= event.day_time.name %>開始 </dd>
          </dl>
          
        </li>
      <% end %>
      <%= paginate @events %>
    <ul>
    
  </div>
</div>
<%= render "footer" %>