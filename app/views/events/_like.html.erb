<% if user_signed_in? %>
  <% if current_user.already_liked?(event) %>
    <%= link_to event_likes_path(event), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
    <%  end %>
  <% else%>
    <%= link_to event_likes_path(event), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
    <%  end %>
  <% end %>
  <%= event.likes.count %>
<% else%>
  <%= link_to new_user_path  do %>
    <i class="far fa-heart"></i>
  <% end %>
  <%= event.likes.count %>
<% end %>