<%= render "events/header-second" %>

<%= form_with model: @user, url: user_registration_path, class: 'events-create-contents', local: true do |f| %>
  <div class='event-create-main'>
    <h1 class="events-create-title">会員情報入力</h1>

    <%= render 'shared/error_messages', model: f.object %>
    <table class="events-table">
      <tbody>
        <tr>
          <th>
            ニックネーム
            <br>
            <span class="mandatory">必須</span>
          </th>
          <td>
            <%= f.text_area :nickname, class:"event-form-default", id:"nickname", placeholder:"例) タロウ", maxlength:"40", autofocus: true %>
          </td>
        </tr>
        <tr>
          <th>
            メールアドレス
            <br>
            <span class="mandatory">必須</span>
          </th>
          <td>
            <%= f.email_field :email, class:"event-form-default", id:"email", placeholder:"PC・携帯どちらでも可" %>
          </td>
        </tr>
        <%if @sns_id.present? %>
          <%= hidden_field_tag :sns_auth, true %>
        <% else %>
          <tr>
            <th>
              パスワード(6文字以上)
              <br>
              <span class="mandatory">必須</span>
            </th>
            <td>
              <%= f.password_field :password, class:"event-form-default", id:"password", placeholder:"6文字以上の半角英数字" %>
            </td>
          </tr>
          <tr>
            <th>
              パスワード(確認)
              <br>
              <span class="mandatory">必須</span>
            </th>
            <td>
              <%= f.password_field :password_confirmation, class:"event-form-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
            </td>
          </tr>
        <% end %>
        <tr>
          <th>
            お名前(全角)
            <br>
            <span class="mandatory">必須</span>
          </th>
          <td>
            <div class='input-name-wrap'>
              <%= f.text_area :family_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
              <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>
            お名前(全角)
            <br>
            <span class="mandatory">必須</span>
          </th>
          <td>
            <div class='input-name-wrap'>
              <%= f.text_area :kana_family_name, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
              <%= f.text_area :kana_first_name, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %>
            </div>
          </td>
        </tr>
        <tr>
          <th>
            活動エリア
            <br>
            <span class="mandatory">必須</span>
          </th>
          <td>
            <%= f.collection_select(:area_id, Area.all, :id, :name, {}, {class:"event-form-default", id:"item-prefecture"}) %>
          </td>
        </tr>
        <tr>
          <th>
            電話番号
            <br>
            <span class="mandatory">必須</span>
          </th>
          <td>
            <%= f.text_area :phone_number, class:"event-form-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"11" %>
          </td>
        </tr>
        <tr>
          <th>
            自己紹介
          </th>
          <td>
            <%= f.text_area :introduction, class:"event-text-default", id:"introduction", placeholder:"例) 普段から体を動かしたりすることが好きです。よろしくお願いします！", rows:"7" ,maxlength:"1000" %>
        <tr>
          <th>
            生年月日
            <br>
            <span class="mandatory">必須</span>
          </th>
          <td>
            <div class='input-birth-wrap'>
              <%= raw sprintf(
                          f.date_select(
                            :birth_day,
                            {
                              id:"birth-date",
                              use_month_numbers: true,
                              prompt:'--',
                              start_year: 1930,
                              end_year: (Time.now.year - 5),
                              date_separator: '%s',
                            },
                            { class: 'birthday-select' }
                          ),
                          '年', '月') + '日'
                %>
            </div>
          </td>
        </tr>
      </tbody>
    </table>
    <div class='submit-btn'>
      <%= recaptcha_tags %>
      <%= f.submit "会員登録" ,class:"submit-btn-text" %>
    </div>
  </div>
<% end %>
<%= render "events/footer" %>
